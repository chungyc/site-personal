Options -Indexes

AddDefaultCharset utf-8

# Available XML files are RSS feeds.
AddType application/rss+xml .xml

<FilesMatch "^[^.]+$">
    ForceType text/html
</FilesMatch>

ErrorDocument 404 /server/errors/missing.html

RewriteEngine On
RewriteCond %{ENV:REDIRECT_STATUS} ^$
RewriteRule ^server/ - [R=404]